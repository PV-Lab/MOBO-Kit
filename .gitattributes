# Enforce LF endings for all text files
* text=auto eol=lf

# Python source
*.py text eol=lf

# Jupyter notebooks
*.ipynb text eol=lf

# Config files
*.yaml text eol=lf
*.yml  text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ini  text eol=lf

# Data files (text-based)
*.csv text eol=lf
*.tsv text eol=lf

# Documentation
*.md  text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Requirements
requirements.txt text eol=lf
Pipfile text eol=lf
Pipfile.lock text eol=lf

# Ignore binary files from line-ending normalization
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.zip binary
*.tar binary
*.gz  binary
*.bz2 binary
*.xz  binary
